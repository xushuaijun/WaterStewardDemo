<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xsyj.watersteward.activity.home.WaterRecordActivity">

    <include
        layout="@layout/title_bar"
        />
    <include
        layout="@layout/user_info"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="30dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/tv_waterbal_yearwater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--m³"
            android:textColor="@color/color_ffff5722"
            android:textSize="30sp"
            android:gravity="center"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水表内余额"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止到"
                android:textColor="@color/bottom_line"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_waterbal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/bottom_line"
                android:textSize="20sp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/color_ffff5722"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示："
            android:textColor="@color/color_666666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waterbalance_text"
            android:textColor="@color/bottom_font"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应急送水"
            android:textColor="@color/title_bg"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_waterbalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="支付购水"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/btn_login_bg"
        />



</LinearLayout>
