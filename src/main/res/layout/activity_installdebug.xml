<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center"
    >
    <include
        layout="@layout/title_bar"
        android:id="@+id/titleview"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                >
                <TextView
                    android:id="@+id/tv_installdebug_well"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_jj"
                    android:padding="25dp"
                    android:text="机井"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    android:gravity="center"/>
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_installdebug_noagricutural"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_fn"
                    android:padding="25dp"
                    android:text="非农"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_installdebug_valve"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_fm"
                    android:padding="25dp"
                    android:text="阀门"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    android:gravity="center"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bottom_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                android:weightSum="3"
                >
                <TextView
                    android:id="@+id/tv_installdebug_gate"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_zm"
                    android:padding="25dp"
                    android:text="闸门"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    android:gravity="center"/>
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/ico_add"
                    android:padding="30dp"
                    android:background="@android:color/white"
                    />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/ico_add"
                    android:padding="30dp"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bottom_line"/>

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/activity_loading"
        android:visibility="gone"/>


</RelativeLayout>
