<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-20dp">
        <include
            android:id="@+id/consult_titleview"
            layout="@layout/title_bar"
            />
        <ScrollView
            android:layout_below="@id/consult_titleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="序        号"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <Spinner
                            android:id="@+id/sp_qdedit_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ico_sy_todown"
                            android:paddingLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名        称"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <Spinner
                            android:id="@+id/sp_qdedit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ico_sy_todown"
                            android:paddingLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格型号"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />


                    <EditText
                        android:id="@+id/et_qdedit_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数        量"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_qdedit_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:inputType="numberDecimal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单        位"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />

                    <EditText
                        android:id="@+id/et_qdedit_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_qdedit_unitprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单        价"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyqd_unitprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_qdedit_unitprice"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:inputType="numberDecimal"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tv_qdedit_priceview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金        额"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_applyqd_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_qdedit_priceview"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:inputType="numberDecimal"

                        />

                </RelativeLayout>
                <Button
                    android:id="@+id/btn_qdedit_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="确定"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_login_bg"
                    android:layout_marginBottom="@dimen/dp_10"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/activity_loading"
        android:visibility="gone"/>


</RelativeLayout>
