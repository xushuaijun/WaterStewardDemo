<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg"
    android:padding="@dimen/dp_10"
 >
    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/title_bg"
        />
    <ImageButton
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:onClick="back"
        android:src="@mipmap/ico_back"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/paddingView"
        />
    <com.xsyj.watersteward.customview.MarqueeText
        android:id="@+id/tv_location"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ico_sy_map"
        android:text=""
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:focusable="true"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/titleTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/paddingView"

       >
        <ImageView
            android:id="@+id/img_titIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:src="@mipmap/sy_top_logo1"
            android:paddingRight="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="水源首部"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="登录"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_top_info"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_top_share"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_top_search"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_top_add"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_tz"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_scan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_sys"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />
    <ImageView
        android:id="@+id/img_submit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:src="@mipmap/submit"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="跳过"
        android:layout_toLeftOf="@id/img_add"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_below="@id/paddingView"
        android:autoLink="all"
        android:paddingLeft="@dimen/dp_30"
        />



</RelativeLayout>
