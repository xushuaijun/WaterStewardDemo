<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xsyj.watersteward.activity.home.WaterRecordActivity">
    <include
        android:id="@+id/opermanager_title"
        layout="@layout/title_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_below="@id/opermanager_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_opermanageapply_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_opermanagetask_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/et_opermanagetask_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_address"
                    android:text=""
                    android:hint="点击选择地址"
                    android:gravity="center"
                    android:textColorHint="@color/color_666666"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:background="@android:color/white"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_50"
                    android:editable="false"
                    />
                <!--android:drawableRight="@mipmap/ico_edit"-->

                <TextView
                    android:id="@+id/tv_opermanagetask_chooseAddress"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/cx_zk02"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/tv_opermanagetask_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修人"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/et_opermanagetask_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_name"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:background="@android:color/white"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/tv_opermanagetask_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修人编码"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/et_opermanagetask_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_code"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:background="@android:color/white"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_opermanagetask_jtimeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单时间"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_opermanagetask_jtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_jtimeview"
                    android:text="点击选择时间"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_50"
                    />
                <TextView
                    android:id="@+id/tv_opermanagetask_jchoosetime"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/cx_zk02"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_opermanagetask_wtimeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修时间"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_opermanagetask_wtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_wtimeview"
                    android:text="点击选择时间"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_50"
                    />
                <TextView
                    android:id="@+id/tv_opermanagetask_wchoosetime"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/cx_zk02"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修内容"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_666666"/>
                <EditText
                    android:id="@+id/et_operamanatask_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/bg_orange_selector"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:minHeight="@dimen/dp_50"
                    android:padding="@dimen/dp_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修类型"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_666666"/>
                <EditText
                    android:id="@+id/et_operamanatask_wxLx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:background="@drawable/bg_orange_selector"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:minHeight="@dimen/dp_50"
                    android:padding="@dimen/dp_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修情况"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_666666"/>
                <EditText
                    android:id="@+id/et_operamanatask_jgQk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:background="@drawable/bg_orange_selector"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:minHeight="@dimen/dp_50"
                    android:padding="@dimen/dp_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修原因"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_666666"/>
                <EditText
                    android:id="@+id/et_operamanatask_jgYy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:background="@drawable/bg_orange_selector"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:minHeight="@dimen/dp_50"
                    android:padding="@dimen/dp_10"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_opermanagetask_jgSjview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修需要时间"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/et_opermanagetask_jgSj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_opermanagetask_jgSjview"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:background="@android:color/white"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修建议"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_666666"/>
                <EditText
                    android:id="@+id/et_operamanatask_jgJj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:background="@drawable/bg_orange_selector"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:minHeight="@dimen/dp_50"
                    android:padding="@dimen/dp_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清单"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp"
                    />
                <RelativeLayout
                    android:id="@+id/rl_opermanagetask_qd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击添加清单"
                        android:gravity="center"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ico_sy_todown"
                        android:paddingLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <com.xsyj.watersteward.customview.ListViewForScrollView
                android:id="@+id/lv_opermanagetask_qd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/bg_color"
                android:dividerHeight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    >
                    <LinearLayout
                        android:id="@+id/ll_task_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修费（元）"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <EditText
                            android:id="@+id/et_task_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sp_16"
                            android:text=""
                            android:background="@drawable/bg_orange_selector"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:padding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_task_price"
                        android:layout_marginTop="@dimen/dp_10"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大                写"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <EditText
                            android:id="@+id/et_operamanatask_pricecapital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sp_16"
                            android:text=""
                            android:background="@drawable/bg_orange_selector"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:padding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone">
                <WebView
                    android:id="@+id/wv_opermanatask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5">
                <RadioGroup
                    android:id="@+id/rg_operamanatask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp_10">
                    <RadioButton
                        android:id="@+id/rb_operamanatask_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/resg_check_selector"
                        android:text="同意"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@drawable/rg_orange_selector"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/rb_operamanatask_disagree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/resg_check_selector"
                        android:text="不同意"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@drawable/rg_orange_selector"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="20dp"
                        />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp_10"
                    android:text="维修验收"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp_10"
                    android:text="@string/operationmanagertask"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管护员签名"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_opermanagetask_gname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日    期"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_opermanagetask_gtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="点击选择时间"
                        android:textColorHint="@color/color_666666"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_marginTop="@dimen/dp_1"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="填写意见"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/color_666666"/>
                    <EditText
                        android:id="@+id/et_operamanatask_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/bg_orange_selector"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:minHeight="@dimen/dp_50"
                        android:padding="@dimen/dp_10"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp_10"
                    android:text="修改人信息"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改人签名"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_opermanagetask_updatename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:enabled="false"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改时间"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_opermanagetask_updatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="点击选择时间"
                        android:textColorHint="@color/color_666666"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_task_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="附件"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/btn_login_bg"
                android:layout_marginBottom="@dimen/dp_15"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@android:color/white"
                android:text="上传已盖章文件照片"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="10dp"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@android:color/white"
                android:visibility="gone">
                <com.xsyj.watersteward.customview.MyGridView
                    android:id="@+id/gv_opermanagetask_uploadimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:fadingEdgeLength="0dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:scrollingCache="false"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="5dp"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp">
                </com.xsyj.watersteward.customview.MyGridView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



    <include
        layout="@layout/activity_loading"
        android:visibility="gone"/>




</RelativeLayout>
