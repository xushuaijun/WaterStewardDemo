<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xsyj.watersteward.activity.home.WaterRecordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/title_bar"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联  系  人"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/et_repairapply_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入"
                        android:textColorHint="@color/bottom_line"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_30"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_repairapply_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入"
                            android:textColorHint="@color/bottom_line"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ico_phonebook"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备类型"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_repairapply_devicetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入"
                            android:textColorHint="@color/bottom_line"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ico_phonebook"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障地址"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_repairapply_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入"
                            android:text="正在定位……"
                            android:textColorHint="@color/bottom_line"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ico_sy_toright"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:text="例：1号楼2单元304"
                    android:textColor="@color/bottom_line"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    android:text="故障图片"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="30dp"
                    android:background="@android:color/white">
                    <com.xsyj.watersteward.customview.MyGridView
                        android:id="@+id/gv_repair_uploadimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:fadingEdgeLength="0dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:scrollingCache="false"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="5dp"
                        tools:layout_editor_absoluteY="0dp"
                        tools:layout_editor_absoluteX="8dp">
                    </com.xsyj.watersteward.customview.MyGridView>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_bg_gray"
                        android:src="@mipmap/ico_upload"
                        android:padding="@dimen/dp_15"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_bg_gray"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/ico_upload"
                        android:padding="@dimen/dp_15"
                        android:visibility="gone"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_bg_gray"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/ico_upload"
                        android:padding="@dimen/dp_15"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障描述"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/et_repairapply_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="点击快速输入故障内容"
                        android:textColorHint="@color/bottom_font"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_10"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="@dimen/dp_1"
                    android:text="@string/repair_text"
                    android:textSize="16sp"
                    android:textColor="@color/bottom_line"
                    android:background="@android:color/white"
                    />

                <Button
                    android:id="@+id/btn_repair_confirm"
                    android:layout_below="@id/ll_login_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="确定"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/btn_login_bg"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/activity_loading"
        android:visibility="gone"/>





</RelativeLayout>
