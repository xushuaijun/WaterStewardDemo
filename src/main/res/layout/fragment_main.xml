<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:background="@mipmap/ico_top_bg1"
                android:paddingTop="@dimen/dp_20"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/rl_main_login"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/dot_blur"
                    >
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_white"
                        >
                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/dot_focus"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录/注册"
                                android:layout_centerInParent="true"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_main_userInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <com.xsyj.watersteward.customview.CircleImage
                        android:id="@+id/img_water_usericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ico_personalinfo_via"
                        android:layout_marginLeft="20dp"
                        />
                    <LinearLayout
                        android:id="@+id/ll_water_userInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_water_usericon"
                        android:layout_centerVertical="true"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="名称"
                                android:textColor="@color/color_333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_main_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/color_333333"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手机"
                                android:textColor="@color/color_333333"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_main_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/color_333333"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"/>
                        </LinearLayout>



                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ico_sy_toright"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_water_mqr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:background="@color/color_80000000"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已绑定户号"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                           />

                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_0.5"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_0.5"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共享户号"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                          />

                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_0.5"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_0.5"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新消息"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                >
                <TextView
                    android:id="@+id/tv_main_userinfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_grxx"
                    android:padding="25dp"
                    android:text="个人信息"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"/>
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_main_waterrightinfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_zsxx"
                    android:padding="25dp"
                    android:text="水权证信息"
                    android:textSize="13sp"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_main_parcelinfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_dkxx"
                    android:padding="25dp"
                    android:text="地块信息"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                   />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bottom_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                >

                <TextView
                    android:id="@+id/tv_main_wellinfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_jjxx"
                    android:padding="25dp"
                    android:text="机井信息"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>

                <TextView
                    android:id="@+id/tv_main_valveinfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/ico_aboutus_fmxx"
                    android:padding="25dp"
                    android:text="阀门信息"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_main_opinionQues"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_cjwt"
                    android:padding="25dp"
                    android:text="意见问题"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bottom_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                >
                <TextView
                    android:id="@+id/tv_main_recommendshare"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_tjfx"
                    android:padding="25dp"
                    android:text="推荐分享"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"/>
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_main_experienceEngineer"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_wstys"
                    android:padding="25dp"
                    android:text="我是体验师"
                    android:textSize="13sp"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                  />
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_line"/>
                <TextView
                    android:id="@+id/tv_main_aboutus"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ico_aboutus_gywm"
                    android:padding="25dp"
                    android:text="关于我们"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/color_333333"
                    android:background="@android:color/white"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/ico_add"
                    android:padding="30dp"
                    android:background="@android:color/white"
                    android:visibility="gone"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bottom_line"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
