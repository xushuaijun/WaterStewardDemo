<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xsyj.watersteward.activity.home.BindLandActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/consult_titleview"
            layout="@layout/title_bar"
            />
        <ScrollView
            android:layout_below="@id/consult_titleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机        井"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <Spinner
                            android:id="@+id/spn_equipedit_well"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ico_sy_todown"
                            android:paddingLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备编号"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_equipedit_equipcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:minWidth="150dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机井编号"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_equipedit_wellcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:minWidth="150dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机井名称"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_equipedit_wellname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:minWidth="150dp"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tv_equipedit_timeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障时间"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_equipedit_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_equipedit_timeview"
                        android:hint="点击选择时间"
                        android:textColorHint="@color/color_666666"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/dp_50"
                        />
                    <TextView
                        android:id="@+id/tv_equipedit_choosetime"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/cx_zk02"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_equipedit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障类型"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_equipedit_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_equipedit_type"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_equipedit_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障内容"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_equipedit_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_equipedit_content"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_equipedit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障天数"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_equipedit_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_equipedit_count"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>
                <Button
                    android:id="@+id/btn_equipedit_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="确定"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_login_bg"
                    android:layout_marginBottom="@dimen/dp_10"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/activity_loading"
        android:visibility="gone"/>


</RelativeLayout>
