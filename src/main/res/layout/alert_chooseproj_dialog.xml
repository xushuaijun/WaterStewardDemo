<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="选择项目"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_chooseproj_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:minWidth="150dp"
            android:hint="点击选择项目"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_333333"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            />

        <Spinner
            android:id="@+id/spn_chooseproj_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:minWidth="150dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_sy_todown"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="输入密码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/et_chooseproj_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入项目密码"
        android:textColorHint="@color/bottom_line"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <Button
            android:id="@+id/btn_chooseproj_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_bg"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="取消"
            android:textSize="@dimen/sp_16"
            />
        <Button
            android:id="@+id/btn_chooseproj_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_bg"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:text="确定"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>


</LinearLayout>